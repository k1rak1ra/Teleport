<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane fx:id="ap" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.k1ra.Teleport.Edit">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Connection setup:">
               <font>
                  <Font size="22.0" />
               </font>
            </Text>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Make sure the command works in a terminal before pasting it here!">
               <font>
                  <Font size="15.0" />
               </font>
            </Text>
            <JFXTextField fx:id="name" maxWidth="300.0" promptText="Connection name">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="command" maxWidth="300.0" promptText="Command">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXCheckBox fx:id="exit" text="Close after launching this connection" textFill="WHITE" unCheckedColor="WHITE">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </JFXCheckBox>
            <Text fill="WHITE" layoutX="210.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Label color:">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Text>
            <JFXColorPicker fx:id="color">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </JFXColorPicker>
            <Text fill="WHITE" layoutX="255.0" layoutY="178.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Image (optional):">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="select_image" mnemonicParsing="false" text="Select image" textFill="WHITE" />
                  <ImageView fx:id="image" fitHeight="90.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <Button fx:id="save" mnemonicParsing="false" text="Save" textFill="WHITE">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
